.model small
.stack 100
.data
 tb1 db 'nhap vao chuoi$'
 tb2 db 10,13,'nhap vao ki tu:$'
 co db 10,13,'tim thay$'
 ko db 10,13,'ko thay$'
 str db 100 dup('$')
 
 .code 
       main proc
         mov ax,@data
         mov ds,ax
         
         mov ah,9
         lea dx,tb1
         int 21h
         
         mov ah,0ah
         lea dx,str
         int 21h
         
         mov ah,9
         lea dx,tb2
         int 21h
         
         mov ah,1
         int 21h
     
         mov bl,al
         mov al,bl
         mov cx,0
         mov cl,[str+1]
         lea si,[str+2]
         mov bx,1
         lap:
            mov dx,[si]
            cmp al,dl
            je timthay
            inc si
            inc bx
            loop lap
            jmp kothay
            
         timthay:
             mov ah,9
             lea dx,co
             int 21h
             mov ax,bx
             call chuyenchu
             jmp exit
             
         kothay:
             mov ah,9
             lea dx,ko
             int 21h
             jmp exit
             
         exit:
             mov ah,4ch
             int 21h
      main endp
       
 chuyenchu proc
     mov bx,10
     mov cx,0
     chia10:
      mov dx,0
      div bx
      push dx
      inc cl
      cmp ax,0
      je hienthi
      jmp chia10
      hienthi:
         pop dx
         add dl,48
         mov ah,2
         int 21h
         loop hienthi
      ret 
  chuyenchu endp
 end
